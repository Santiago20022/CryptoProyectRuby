<h1>Dashboard Cryptos</h1>

<%= form_with url: search_cryptocurrencies_path, method: :get, local: true do |form| %>
  <%= form.label :query, "Search name by crypto:" %>
  <%= text_field_tag :query, params[:query], placeholder: "Ej: ethereum, bitcoin" %>
  <%= form.submit "Buscar" %>
<% end %>

<% if @error_message %>
  <p style="color: red;"><%= @error_message %></p>
<% else %>
  <!-- BotÃ³n para seleccionar una cripto aleatoria -->
  <%= form_with url: cryptocurrencies_path, method: :post do %>
    <%= hidden_field_tag :crypto_data, @crypto_data.to_json %>
    <%= submit_tag 'like' %>
  <% end %>

  <p>
    <%= link_to "ðŸ”¼ Ordenar de Low to High", low_to_high_cryptocurrencies_path %> |
    <%= link_to "ðŸ”½ Ordenar de High to Low", high_to_low_cryptocurrencies_path %>
  </p>
  <div data-controller="saludo">
    <input data-saludo-target="nombre" type="text" placeholder="Escribe tu nombre">
    <button data-action="click->saludo#saludar">say hello</button>
  </div>


  <!-- Tabla para mostrar las criptomonedas -->
  <table border="1">
    <thead>
      <tr>
        <th>Criptomoneda</th>
        <th>Precio (USD)</th>
      </tr>
    </thead>
    <tbody>
      <% if @selected_crypto.nil? %>
        <% @crypto_data.each do |coin, data| %>
          <tr>
            <td class="coin-name"><%= coin.capitalize %></td>
            <td class="coin-price">$<%= data["usd"] %></td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td class="coin-name"><%= @selected_crypto.name.capitalize %></td>
          <td class="coin-price">$<%= @selected_crypto.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
